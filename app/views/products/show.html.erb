<%= link_to "Back", products_path %>
<section class='product'>
  <% cache @product do %>
      <h1>Product ID:<%= @product.id %> <%= @product.name %></h1>
      <%= image_tag @product.featured_image if @product.featured_image.attached? %>
      <section class='product-info'>
        <br/>
        <%= @product.description %>
        <br/>
        <%= render 'inventory', product: @product %>
        <br/>
        QUANTITY: <%= @product.inventory_count %> <br/>
        <% #@product.description.attachments.each do |attachment| %>
            <% #if attachment.content_type.starts_with?('image') %>
              <% #= image_tag attachment %>
            <% #end %>
          <% #end %>
    <% end %>
    </section>
    <% if authenticated? %>
        <%= link_to "Edit", edit_product_path(@product) %>
        <%= button_to "Delete", @product, method: :delete, data: {turbo_confirm: "Are you sure you want to delete?"} %>
    <% end %>
</section>